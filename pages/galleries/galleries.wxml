<!--pages/galleries/galleries.wxml-->
<swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" display-multiple-items='1' circular previous-margin="130rpx" next-margin="130rpx">
  
  <block wx:for="{{imgUrls}}">
    <swiper-item >
      <view style='width:430rpx; height:250rpx; border-radius:20rpx; background-image: url({{item}});  background-position: center; background-repeat: no-repeat; background-size: cover;'>
      </view>
    </swiper-item>
  </block>
</swiper>

<view class="title">Your Galleries</view>

<!-- Add Logic, if not gallereies display this message -->

<view class="body">
  <block wx:for='{{ galleries }}'>
    <view class="flex-item">
      <view style="text-align:center; color:#f0f0f0; font-size:105%">{{item.title}}</view>
      <view bindtap="showGallery" data-id='{{item.id}}'class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url( {{ item.photo }} );">
      </view>
      
      <view margin-bottom="250rpx" class="card-desc">{{item.name}}</view>
    </view>
  </block>
</view>

