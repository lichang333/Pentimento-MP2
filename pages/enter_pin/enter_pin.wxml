<!--pages/enter_pin/enter_pin.wxml-->
<view class="banner" style = "background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 60%), url('http://pentimento-mp.ellerystars.xyz/img/banner.jpg');">
  <view class="banner-content" >
    <text class="h1" style="opacity:0.95;font-size: 40px; font-weight:385; "></text>
    
    <!-- <text class="subtitle" style="opacity:0.68;font-size: 20px;">\nEnter Your Pin</text> -->
    <view style='border: 1rpx solid white; border-radius: 6px; padding: 8px 16px; opacity: 0.75;'>
      <input placeholder-class="input-box" bindinput="bindKeyInput" style="opacity:0.88;font-size: 18px; " type="password" name="pin" placeholder="Enter Pin Code"/>
    </view>
    
    <button bindtap="goToGalleryPage" class="primary btn animation-{{animation==button.name? button.name :''}} animation-reverse m-sm basis-sm" data-class="{{button.name}}">Submit</button>
  </view>
</view>